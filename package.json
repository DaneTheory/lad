{
  "name": "lad",
  "description": "Lad scaffolds a Koa webapp and API framework for Node.js",
  "version": "0.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "ava": {
    "verbose": true,
    "files": [
      "test/**/*.js"
    ]
  },
  "bin": "cli.js",
  "bugs": {
    "url": "https://github.com/ladjs/lad/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)"
  ],
  "dependencies": {
    "cac": "^6.4.2",
    "camelcase": "^5.2.0",
    "github-username-regex": "^1.0.0",
    "is-email": "^1.0.0",
    "is-url": "^1.2.4",
    "is-valid-npm-name": "^0.0.4",
    "npm-conf": "^1.1.3",
    "sao": "^1.6.1",
    "semver": "^5.6.0",
    "speakingurl": "^14.0.1",
    "superb": "^3.0.0",
    "update-notifier": "^2.5.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "ava": "^1.4.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-xo-lass": "^1.0.3",
    "eslint-plugin-compat": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "remark-cli": "^6.0.1",
    "remark-preset-github": "^0.0.13",
    "supertest": "^4.0.2",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "homepage": "https://github.com/ladjs/lad",
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "ava",
    "boilerplate",
    "codecov",
    "es6",
    "es7",
    "flavored",
    "generator",
    "gfm",
    "github",
    "lad",
    "license",
    "license-generator",
    "markdown",
    "module",
    "np",
    "npm",
    "nyc",
    "package",
    "prettier",
    "project",
    "remark",
    "sao",
    "scaffold",
    "spdx",
    "starter",
    "xo",
    "yeoman"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md,!test/snapshots/**/*.md,!template/test/snapshots/**/*.md,!template/test/**/*snapshots/**/*.md,!template/README.md,!template/locales/README.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "sao.js",
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/lad"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run ava && cd template && npm run test",
    "test-coverage": "npm run lint && npm run nyc && cd template && npm run test-coverage"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignores": [
      "config.js"
    ],
    "overrides": [
      {
        "plugins": [
          "compat"
        ],
        "rules": {
          "compat/compat": "error"
        },
        "settings": {
          "polyfills": [
            "fetch"
          ]
        },
        "files": "template/assets/js/**/*.js",
        "envs": [
          "browser"
        ]
      }
    ]
  }
}
