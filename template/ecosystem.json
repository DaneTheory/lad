{
  "apps": [
    {
      "name": "web",
      "script": "web.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "api",
      "script": "api.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "bull",
      "script": "bull.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster_mode",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": "<%= this.slug(name) %>-deploy",
      "ref": "origin/master",
      "repo": "git@github.com:<%= repo.replace('https://github.com/', '') %>.git",
      "path": "/var/www/production",
      "post-deploy": "npm start post-deploy",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
